# Environment Configuration for Vercel Deployment

# Application Settings
VITE_APP_NAME=RWA-DEX
VITE_APP_URL=https://your-app.vercel.app
NODE_ENV=production
PORT=3000

# Blockchain Configuration
VITE_CHAIN_ID=5009
VITE_RPC_URL=https://rpc.sepolia.mantle.xyz
VITE_EXPLORER_URL=https://sepolia.mantlescan.info

# Contract Addresses (Replace with your deployed contract addresses)
VITE_RWA_FACTORY_ADDRESS=0x...
VITE_DEX_CORE_ADDRESS=0x...
VITE_PRICE_ORACLE_ADDRESS=0x...
VITE_LENDING_PROTOCOL_ADDRESS=0x...
VITE_COMPLIANCE_REGISTRY_ADDRESS=0x...
VITE_YIELD_DISTRIBUTOR_ADDRESS=0x...

# WalletConnect Configuration
VITE_WALLETCONNECT_PROJECT_ID=your_walletconnect_project_id

# API Configuration
VITE_API_BASE_URL=https://your-app.vercel.app/api
VITE_AI_ENGINE_URL=https://your-ai-engine.vercel.app

# Database (if using for serverless functions)
DATABASE_URL=postgresql://user:password@host:port/database?sslmode=require
DB_PASSWORD=your_database_password

# Redis Configuration (if using for caching)
REDIS_URL=redis://user:password@host:port

# Authentication Configuration
JWT_SECRET=your_jwt_secret_key
JWT_EXPIRES_IN=7d

# External APIs
COINGECKO_API_KEY=your_coingecko_api_key
DEFILLAMA_API_KEY=your_defillama_api_key
COINMARKETCAP_API_KEY=your_coinmarketcap_api_key
CHAINLINK_API_KEY=your_chainlink_api_key

# Security
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info

# Feature Flags
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_LENDING=true
VITE_ENABLE_AI_PRICING=true

# CORS Configuration for Production
CORS_ORIGIN=https://your-app.vercel.app

# AI Engine Configuration (for separate deployment)
AI_ENGINE_API_KEY=your_ai_engine_api_key
AI_DATABASE_URL=postgresql://user:password@host:port/ai_database?sslmode=require

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=100

# Cache TTL (seconds)
CACHE_TTL_PRICES=30
CACHE_TTL_PORTFOLIO=60
CACHE_TTL_ASSETS=3600

# Logging
LOG_LEVEL=info

# Model Configuration
MODEL_CACHE_TTL=3600
RETRAIN_INTERVAL_HOURS=24
MIN_TRAINING_SAMPLES=100
FEATURE_WINDOW_DAYS=30

# Risk Scoring Weights (sum should equal 1.0)
LIQUIDITY_WEIGHT=0.25
VOLATILITY_WEIGHT=0.20
MARKET_CAP_WEIGHT=0.15
COMPLIANCE_WEIGHT=0.15
ASSET_QUALITY_WEIGHT=0.25